{
    "$schema":  "https://schema.tauri.app/config/2",
    "productName":  "ConfUtils",
    "version":  "2.1.9",
    "identifier":  "com.confutils.desktop",
    "build":  {
                  "beforeDevCommand":  "npm run dev",
                  "beforeBuildCommand":  "npm run build",
                  "devUrl":  "http://localhost:5173",
                  "frontendDist":  "../dist"
              },
    "bundle":  {
                   "active":  true,
                   "targets":  "all",
                   "icon":  [
                                "icons/32x32.png",
                                "icons/128x128.png",
                                "icons/128x128@2x.png",
                                "icons/icon.icns",
                                "icons/icon.ico"
                            ],
                   "windows":  {
                                   "certificateThumbprint":  null,
                                   "digestAlgorithm":  "sha256",
                                   "timestampUrl":  "http://timestamp.digicert.com",
                                   "tsp":  true,
                                   "webviewInstallMode":  {
                                                              "type":  "downloadBootstrapper"
                                                          },
                                   "wix":  {
                                               "language":  "en-US"
                                           },
                                   "nsis":  {
                                                "installMode":  "perMachine"
                                            }
                               },
                   "publisher":  "CONF",
                   "homepage":  "https://github.com/3mreconf/confutils",
                   "longDescription":  "Modern Windows System Utilities - Optimize, secure, and manage your Windows system with ease.",
                   "shortDescription":  "Modern Windows System Utilities",
                   "category":  "Utility"
               },
    "app":  {
                "windows":  [
                                {
                                    "title":  "ConfUtils",
                                    "width":  1280,
                                    "height":  800,
                                    "minWidth":  800,
                                    "minHeight":  600,
                                    "center":  true,
                                    "fullscreen":  false,
                                    "resizable":  false,
                                    "maximizable":  true,
                                    "decorations":  false,
                                    "transparent":  true
                                }
                            ],
                "security":  {
                                 "csp":  null
                             }
            }
}
